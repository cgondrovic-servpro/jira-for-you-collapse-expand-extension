{
  "manifest_version": 3,
  "name": "Jira For You Swimlane Collapse / Expand",
  "version": "1.0.0",
  "description": "Collapse and expand sections on Jira for-you page based on swimlane statuses",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.atlassian.net/jira/for-you*", "*://*.jira.com/jira/for-you*", "*://jira-servpro.atlassian.net/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}